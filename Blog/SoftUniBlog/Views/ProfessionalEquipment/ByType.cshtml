@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Equipment by type " + ViewBag.Type;
}

<h2>Index</h2>

<p>Professional Equipment With type @ViewBag.Type!</p>

@using SoftUniBlog.Models
@{
    List<Equipment> equipments = ViewBag.Equipments;
}
@foreach (var equipment in equipments)
{
    <li><img src="~/Images/Equipments/@equipment.ImagePath" width="300" height="300" /><span>@equipment.Name</span></li>
}

