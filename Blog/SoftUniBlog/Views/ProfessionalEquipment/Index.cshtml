@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<head>
 <title>Motivation</title>
</head>
<style>
body {
    background-image: url('http://www.careandliving.com/wp-content/uploads/2016/08/muscular-guy-six-pack-HD.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: center;
}

 </style>
@using SoftUniBlog.Models
@{
    List<EquipmentType> equipmentTypes = ViewBag.EquipmentTypes;
}
@foreach (var equipmentType in equipmentTypes)
{
    var type = equipmentType.Name;
    <li><a href="ProfessionalEquipment/ByType/@type"><img src="@equipmentType.ImagePath" width="300" height="300" /><span>@equipmentType.Name</span></a></li>
}




